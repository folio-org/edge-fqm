{
  "id": "@artifactId@-@version@",
  "name": "Edge FQM API",
  "permissionSets" : [],
  "requires": [
    {
      "id": "login",
      "version": "7.0"
    },
    {
      "id": "mod-fqm-manager",
      "version": "1.0"
    }
  ],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      {
        "name": "okapi_url",
        "value": "http://okapi:9130"
      },
      {
        "name": "secure_store",
        "value": "Ephemeral"
      },
      {
        "name": "secure_store_props",
        "value": "src/main/resources/ephemeral.properties"
      }
    ]
  }
}
